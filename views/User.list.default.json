{
    "name": "Users list",
    "description": "This view is intended for displaying basic listing of existing users.",
    "layout": {
        "items": [
            {
                "type": "field",
                "value": "id",
                "width": "10%",
                "sortable": true,
                "readonly": true
            },
            {
                "type": "field",
                "value": "name",
                "width": "25%",
                "sortable": true
            },
            {
                "type": "field",
                "value": "created",
                "width": "25%",
                "sortable": true,
                "widget": {
                    "usage": "date"
                }
            },
            {
                "type": "field",
                "value": "validated",
                "width": "10%"
            },
            {
                "type": "field",
                "value": "login",
                "widget": {
                    "link": true
                },
                "width": "30%",
                "sortable": true
            },
            {
                "type": "field",
                "value": "language",
                "width": "10%",
                "widget": {
                    "type": "select",
                    "values": ["fr", "en"]
                }
            },
            {
                "type": "field",
                "value": "groups_ids",
                "label": "Groups",
                "width": "0%",
                "visible": false,
                "widget": {
                    "type": "one2many"
                }
            },
            {
                "type": "field",
                "value": "count_plays",
                "width": "10%"
            },
            {
                "type": "field",
                "value": "count_maps",
                "width": "10%"
            }
        ]
    }
}